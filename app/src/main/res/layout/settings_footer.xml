<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#202020"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_cinnamon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Cinnamon Keyboard"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="• Lekka i szybka klawiatura\n• Wbudowane narzędzia i panele\n• Rozszerzone funkcje IME\n• Personalizacja i diagnostyka\n\nDziękujemy za korzystanie z Cinnamon!"
        android:textSize="15sp"
        android:textColor="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
